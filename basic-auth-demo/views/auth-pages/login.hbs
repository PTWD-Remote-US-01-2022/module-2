<h2> Login </h2>

<form action="/process-login" method="POST">

    <label> Email: 
        <input type="email" name="email" required />
    </label>

    <br>

    <label> Password: 
        <input type="password" name="password" required />
    </label>

    <br>
    
    <button type="submit"> Login </button>

</form>


{{#if errorMessage}} 
    <p><b> {{ errorMessage }} </b></p>
{{/if}}