<h2> Edit a book </h2>

<form action="/books/{{_id}}/edit" method="POST">
    <label>
        {{!-- we need the value attrribute to prefill the fields in the form --}}
        Title: <input type="text" name="title" value="{{title}}"/>
    <label>

    <br>

    <label>
        Description: <textarea name="description" cols="30" rows="5"> {{ description }} </textarea>
    <label>

    <br>

     <label>
        Author: <input type="text" name="author" value="{{author}}" />
    <label>

    <br>

    <label>
        Rating: <input type="number" name="rating" min="1" max="10" value="{{rating}}"/>
    <label>

    <br>

    <button> Save </button>
</form>
